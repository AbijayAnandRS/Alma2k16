        android:layout_height="200dp"
        android:background="#009688"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="AKSHAY RAJ"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginTop="15dp"
            android:id="@+id/naame"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@mipmap/aksyrj"
            android:gravity="center"
            android:id="@+id/phooto"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Email : akshay_13@gmail.com"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/emmail"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Phone : 7381938093"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/phoneno"/>
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="F-CONNECT"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/icon"
        android:id="@+id/fconnect"></Button>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp">


    </LinearLayout>



